---
import "/src/css/styles.css";
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
interface Props {
	title: string;
	description?: string;
}

const { title, description="Astro description" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet"/>


		<title>{title}</title>
		<meta name="description" content={description} />
	</head>

	<body class="bg-gray-800 text-white font-urb">
		<Navbar/>
		<slot />
		<Footer/>

		<script src="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.js"></script>
	</body>
</html>

